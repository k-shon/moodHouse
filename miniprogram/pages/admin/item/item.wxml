<!--miniprogram/pages/admin/menu/item/item.wxml-->
 <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap='addItem'>添加单品</button>
  </view>
<view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">选择菜单：</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindPickerChange" value="{{index}}" range="{{menus}}" range-key='name'>
                        <view class="weui-input">{{menus[index].name}}</view>
                    </picker>
                </view>
       </view>
<view class="weui-cells__title">单品管理</view>
        <view class="weui-cells weui-cells_after-title" wx:for='{{items}}'>
            <view bindtap='editItem' data-itemid='{{item._id}}' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="{{item.imgurl}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">{{item.name}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">修改</view>
            </view>
        </view>
