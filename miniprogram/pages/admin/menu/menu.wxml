 <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap='addMenu'>添加菜单</button>
  </view>
  <!--如果数据库中菜单，则显示-->
<view class="weui-cells__title" wx:if="{{menu.length>0}}">菜单管理</view>
<!--否则显示暂无菜单-->
<view class="weui-cells__title"  wx:else>暂无菜单</view>
<view class="weui-cells weui-cells_after-title" wx:for="{{menu}}">
          <view bindtap='editMenu' data-menuid="{{item._id}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">{{item.name}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">{{item.count}}个单品</view>
            </view>
</view>

